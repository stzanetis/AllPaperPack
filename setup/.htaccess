# Prevent PHP execution
AddType application/octet-stream .php .php3 .php4 .php5 .phtml

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Redirect /index.php and /index.html to /
  RewriteCond %{THE_REQUEST} \s/(index\.php|index\.html)[\s?]
  RewriteRule ^(index\.php|index\.html)$ / [R=301,L]

  # If the file or directory exists, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Everything else goes to index.html (SPA routing)
  RewriteRule . /index.html [L]
</IfModule>
